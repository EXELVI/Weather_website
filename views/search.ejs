<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Meteo nein</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Silkscreen:wght@400;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Carter+One&family=DynaPuff:wght@400..700&family=Silkscreen:wght@400;700&display=swap"
        rel="stylesheet">
    <link rel="icon" type="image/png" href="/Design/meteoicona.png">
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>
<!-- sei marso!!! -->

<body>
    <div class="container-fluid">
        <div class="sfondo-esteso"><img class="position-absolute img-fluid" src=<%=image%>></div>

        <h1 id="eccoleprevisioni" class="text-center mt-2">Here is the forecast for <strong>
                <%=weatherData.name%>
            </strong></h1>

        <div class="container-md mt-4" style="z-index: 3;">
            <div class="card ">
                <div class="card-body">
                    <h3 class="card-title">
                        <%=weatherData.weather[0].main%> <i class="<%=icon%>"></i>
                    </h3>
                    <h5 class="card-subtitle mb-2 text-body-secondary">
                        <%=weatherData.weather[0].description%>
                    </h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="bi bi-thermometer-half"></i>
                            <%=weatherData.main.temp%> °C
                        </li>
                        <li class="list-group-item"><i class="bi bi-thermometer-sun"></i>
                            <%=weatherData.main.feels_like%> °C
                        </li>
                        <li class="list-group-item"><i class="bi bi-thermometer-low"></i>
                            <%=weatherData.main.temp_min%> °C
                        </li>
                        <li class="list-group-item"><i class="bi bi-thermometer-high"></i>
                            <%=weatherData.main.temp_max%> °C
                        </li>
                        <li class="list-group-item"><i class="bi bi-arrow-bar-down"></i>
                            <%=weatherData.main.pressure%> hPa
                        </li>
                        <li class="list-group-item"><i class="bi bi-droplet-half"></i>
                            <%=weatherData.main.humidity%>%
                        </li>
                        <li class="list-group-item"><i class="bi bi-wind"></i>
                            <ul>
                                <li><i class="bi bi-signpost-split"></i>
                                    <%=weatherData.wind.deg%>°
                                </li>
                                <li><i class="bi bi-speedometer2"></i>
                                    <%=weatherData.wind.speed%> km/h
                                </li>
                            </ul>

                        </li>
                        <li class="list-group-item"><i class="bi bi-sunrise"></i>
                            <%=formatAMPM(new Date(weatherData.sys.sunrise * 1000))%>
                        </li>
                        <li class="list-group-item"><i class="bi bi-sunset"></i>
                            <%=formatAMPM(new Date(weatherData.sys.sunset * 1000))%>
                        </li>
                    </ul>
                </div>
            </div>
            <p><i class="bi bi-globe2"></i> <a>
                    <%=weatherData.coord.lat%>
                </a>, <a>
                    <%=weatherData.coord.lon%>
                </a></p>
            <div class="position-fixed bottom-0 start-50 translate-middle " style="z-index: 1;" hidden="true"
                aria-hidden="true">
                <form id="formmmmarsa" class="d-grid gap-2" action="/search" method="GET">
                    <input id="textbox" class="form-control fs-2 " type="text" name="q" placeholder="City..." required>
                    <button id="scoprire" type="submit" class="btn btn-primary mt-3 btn-lg fs-2">Search</button>
                </form>
            </div>
        </div>

    </div>
    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>